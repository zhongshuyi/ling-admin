<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.system.mapper.UmsRoleMapper">
    <insert id="addDataScope">
        insert into ums_role_dept values
        <foreach collection="permIds" item="id" separator=",">
            (null,#{roleId},#{deptIds})
        </foreach>
    </insert>
    <delete id="delDataScope">
        delete from ums_role_dept where role_id = #{roleId} and dept_id in
        <foreach collection="deptIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectRoleListByUserId" resultType="com.mall.system.entity.UmsRole"
            parameterType="long">
        select distinct r.id,
                        r.role_name,
                        r.role_key,
                        r.order_no,
                        r.data_scope,
                        r.status,
                        r.create_time,
                        r.remark
        from ums_role r
                 inner join ums_user_role ur on r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
    <select id="getDataScope" resultType="java.lang.Long">
        select distinct dept_id
        from ums_role_dept
        where role_id = #{roleId}
    </select>
</mapper>
