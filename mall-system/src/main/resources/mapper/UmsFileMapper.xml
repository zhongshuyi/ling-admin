<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.system.mapper.UmsFileMapper">

    <select id="getUserAvatar" resultType="com.mall.system.entity.UmsFile">
        select uf.id,
               name,
               original_name,
               postfix,
               path,
               size,
               business_type,
               upload_by_id
        from ums_file uf
                 left join ums_admin u on uf.id = u.avatar_file_id
        where u.id = #{userId}
    </select>
</mapper>